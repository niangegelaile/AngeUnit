<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3399ff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#3399ff">
        <LinearLayout
            android:gravity="center_vertical"
           android:layout_centerVertical="true"
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/but_backtrack"
                android:layout_width="10.5dp"
                android:layout_height="19dp"
                android:layout_marginLeft="11.5dp"
                android:background="@drawable/common_return_normal"/>
            <TextView
                android:id="@+id/tv_numbynum"
                android:layout_marginLeft="10dp"
                android:text="1/2"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <CheckBox
            android:drawableLeft="@drawable/mis_selector_cb_bg"
            android:drawablePadding="10dp"
            android:button="@null"
            android:id="@+id/cb_select"
            android:textColor="#fff"
            android:paddingRight="11.5dp"
            android:layout_alignParentRight="true"
            android:text="选择"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_pic"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <RelativeLayout
        android:background="#fcfcfc"
        android:id="@+id/but_del"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp" >
        <Button
            android:textColor="#fff"
            android:layout_marginRight="11.5dp"
            android:id="@+id/commit"
            android:text=""
            android:background="@drawable/mis_seletor_bg_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="116dp"
            android:layout_height="31dp" />
    </RelativeLayout>
        <View
            android:background="#e3e3e3"
            android:layout_above="@id/but_del"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>